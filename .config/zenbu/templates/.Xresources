!COLORS
*underlineColor: {{ b_black  }}
*borderColor:    {{ bgc  }}
*background:     {{ bgc  }}
*foreground:     {{ fgc  }}

!BLACK
*color0:       {{ n_black  }}
*color8:       {{ b_black  }}
!RED
*color1:       {{ n_red  }}
*color9:       {{ b_red  }}
!GREEN
*color2:       {{ n_green  }}
*color10:      {{ b_green  }}
!YELLOW
*color3:       {{ n_yellow  }}
*color11:      {{ b_yellow  }}
!BLUE
*color4:       {{ n_blue  }}
*color12:      {{ b_blue  }}
!MAGENTA
*color5:       {{ n_magenta  }}
*color13:      {{ b_magenta  }}
!CYAN
*color6:       {{ n_cyan  }}
*color14:      {{ b_cyan  }}
!WHITE
*color7:       {{ n_white  }}
*color15:      {{ b_white  }}

!URXVT SETTINGS
URxvt*dynamicColors:   on
URxvt.internalBorder:  15
URxvt*lineSpace:       2
URxvt*scrollBar:       false
URxvt.geometry:        80x18
URxvt*saveLines:       1000
URxvt*cursorUnderline: false
URxvt*cursorColor:     {{ b_white  }}
URxvt*underlineColor:  {{ b_black }}
URxvt*colorUL:         {{ n_black }}
URxvt*cursorBlink:     true
URxvt*allow_bold:      true

!PERL
URxvt*perl-lib:        /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher

!CLICKABLE LINKS
URxvt*url-launcher:   inox
URxvt*matcher.button: 1

!MISC
Xcursor*theme: 		  pixelfun
Xcursor*size:  		  16
XTerm*scrollBar: 	  false
XTerm*rightScrollBar: false
XTerm*dynamicColors:  true
XLogo*geometry: 	  150x150
Xclock*geometry:  	  150x150-0-0
Xclock*background: 	  {{ bgc  }}
