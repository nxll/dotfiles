#!/bin/bash
#SWITCH WALL WITH ZENBU

#BASE ON IMAGE
imws()
{
	hsetroot -{{ wtype }} $HOME/images/wallpapers/{{ wallpaper }} -blur {{ wblur }}
}

#BASE ON BOLD BLACK COLOR
bgws()
{
	hsetroot -solid "{{ b_black }}"
}

#BASE ON COLORSCHEME
csws()
{
	convert -size 100x100 \
	xc:"{{ b_black }}" \
	xc:"{{ b_red }}" \
	xc:"{{ b_green }}" \
	xc:"{{ b_yellow }}" \
	xc:"{{ b_blue }}" \
	xc:"{{ b_magenta }}" \
	xc:"{{ b_cyan }}" \
	xc:"{{ b_white }}" \
	+append -filter Cubic \
	-distort SRT 60 \
	-blur 0x40 \
	/tmp/csws.png

	hsetroot -fill /tmp/csws.png -brightness 0.1
}

#ALTERNATE BASE ON COLORSCHEME
sgws()
{
	convert \( xc:"{{ b_red }}" xc:"{{ n_green }}" +append \) \
	\( xc:"{{ b_yellow }}" xc:"{{ b_green }}" +append \) -append \
	-filter point -interpolate catrom \
	-define distort:viewport=100x100 \
	-distort Affine '.5,.5 .5,.5   1.5,1.5 99.5,99.5' \
	/tmp/sgws.png

	hsetroot -fill /tmp/sgws.png -brightness 0.1
}

imws
#bgws
#csws
#sgws
