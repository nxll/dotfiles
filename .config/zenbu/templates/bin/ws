#!/bin/bash
#SWITCH WALL WITH ZENBU
#BASED ON COLORSCHEME COLORS

case "$1" in
	"-wallpaper")
		#TYPICAL WALLPAPER
		hsetroot -{{ wtype }} $HOME/images/wallpapers/{{ wallpaper }} -blur {{ wblur }}
	;;
	"-solid")
		#SOLID BOLD BLACK COLOR
		hsetroot -solid "{{ b_black }}"
	;;
	"-gradient")
		#GRADIENT STRIPES
		convert -size 100x100 \
		xc:"{{ b_black }}" \
		xc:"{{ b_red }}" \
		xc:"{{ b_green }}" \
		xc:"{{ b_yellow }}" \
		xc:"{{ b_blue }}" \
		xc:"{{ b_magenta }}" \
		xc:"{{ b_cyan }}" \
		xc:"{{ b_white }}" \
		+append -filter Cubic \
		-distort SRT 60 \
		-blur 0x40 \
		/tmp/csws.png

		hsetroot -fill /tmp/csws.png -brightness 0.1
	;;
	"-striped")
		#STRIPES
		convert -size 350x350 \
		xc:"{{ b_black }}" \
		xc:"{{ b_red }}" \
		xc:"{{ b_green }}" \
		xc:"{{ b_yellow }}" \
		xc:"{{ b_blue }}" \
		xc:"{{ b_magenta }}" \
		xc:"{{ b_cyan }}" \
		xc:"{{ b_white }}" \
		\( -clone 0--1 -clone 0--1 \) \
		+append -filter Cubic \
		-distort SRT 60 \
		/tmp/spws.png

		hsetroot -fill /tmp/spws.png -brightness 0.1
	;;
	"-4color")
		#4 COLOR GRADIENT
		convert \( xc:"{{ b_red }}" xc:"{{ n_green }}" +append \) \
		\( xc:"{{ b_yellow }}" xc:"{{ b_magenta }}" +append \) -append \
		-filter point -interpolate catrom \
		-define distort:viewport=100x100 \
		-distort Affine '.5,.5 .5,.5   1.5,1.5 99.5,99.5' \
		/tmp/sgws.png

		hsetroot -fill /tmp/sgws.png -brightness 0.1
	;;
	*)
		#FALLBACK IF NOTHING IS CHOSEN
		hsetroot -solid "{{ b_black }}"
	;;
esac
