#!/bin/bash
#SWITCH WALL WITH ZENBU

#BASE ON IMAGE
imws()
{
	hsetroot -{{ wtype }} $HOME/images/wallpapers/{{ wallpaper }} -blur {{ wblur }}
}

#BASE ON COLORSCHEME
csws()
{
	convert -size 100x100 \
	xc:"{{ b_black }}" \
   	xc:"{{ b_red }}" \
	xc:"{{ b_green }}" \
	xc:"{{ b_yellow }}" \
	xc:"{{ b_blue }}" \
	xc:"{{ b_magenta }}" \
	xc:"{{ b_cyan }}" \
	xc:"{{ b_white }}" \
	+append -filter Cubic \
	-spread 80 \
	-distort SRT 60 \
	/tmp/csws.png

	hsetroot -fill /tmp/csws.png -blur 100
}

csws
#imws
