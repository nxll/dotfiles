# OPTIONS
set font      = fixed
set font      = -kakwa-kakwafont-medium-r-normal--12-120-72-72-c-60-iso8859-1
set geometry  = 1276x15+0+0 #16
set colors    = #FFFFFF #090909 #FFFFFF #090909 #AADB0F #090909
set border    = 2px #202020
set bangchar  = !
set autocomp  = 1
set list      = true
set last      = true
set margin    = -80
set shell     = /usr/bin/zsh
set run_hook  = %s || notify-send "error: command not found"

# BANGS
bang !        = urxvtc -e %s
bang www      = inox %s
bang pdf      = zathura %s
bang img      = sxiv -a %s
bang man      = urxvtc -e man %s
bang ?        = echo "interrobang ignored \"%s\""
bang quit     = case "%s" in shutdown) systemctl poweroff ;; reboot) systemctl reboot ;; logout) killall xinit ;; cancel) exit ;; esac

# SEARCH BANGS
bang gg       = inox "https://www.google.co.uk/#q=%s"
bang ddg      = inox "https://duckduckgo.com/?q=%s"
bang yt       = inox "https://www.youtube.com/results?search_query=%s"
bang imdb     = inox "http://www.imdb.com/find?q=%s"
bang aw       = inox "https://wiki.archlinux.org/?search=%s"
bang gh       = inox "https://github.com/search?q=%s"
bang wh       = inox "https://alpha.wallhaven.cc/search?q=%s"
bang us       = inox "https://unsplash.com/search/%s"
bang pex      = inox "https://www.pexels.com/search/%s"
bang wu       = inox "http://www.wallpaperup.com/search/results/%s"

# COMPLETIONS
tab default   = percontation "%s" %s | sort -u
tab ?         = ignore="%s%s"; awk '/^bang/ {print "!"$2" ";}' ~/.interrobangrc
tab quit      = echo -e "cancel\nshutdown\nsleep\nreboot\nlogout" | grep "^%s%s"
