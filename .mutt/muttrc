source "gpg -d ~/.mutt/passwords.gpg |"
source "~/.mutt/colors/default.colors"

set realname = "NXLL"
set imap_user  = "nxll@teknik.io" 
set from = "nxll@teknik.io"
set folder=imaps://mail.teknik.io:993
set spoolfile = "+INBOX"
mailboxes = "+INBOX"

# Certificates
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

# SMTP SETTINGS
set smtp_url = smtps://$imap_user:$imap_pass@mail.teknik.io

# Check for new messages when mutt is running
set check_new=yes
set mail_check=60
set timeout=15

# SECURING
set move = no
set imap_keepalive = 900
set ssl_starttls = yes
set ssl_force_tls = yes

# SORT MAIL
set sort = reverse-date-received

# COLOR SETTINGS
# color normal default default
