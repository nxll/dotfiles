#!/bin/bash

file=1
while [ "$file" ]; do
	file=$(ls -1 --group-directories-first | dmenu -l 10 -fn "-benis-lemon-abunai-abunai-medium-r-normal--10-110-75-75-m-50-iso10646-1" -nb "#151515" -nf "#ffffff" -sb "#aadb0f" -sf "#151515" -p "$(basename $(pwd))")
	if [ -e "$file" ]; then
		owd=$(pwd)
		if [ -d "$file" ]; then
			cd "$file"
		else [ -f "$file" ]
			if which xdg-open &> /dev/null; then
				exec xdg-open "$owd/$file" &
				unset file
			fi
		fi
	fi
done
