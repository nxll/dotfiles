#!/bin/bash
#SWITCH WALL WITH ZENBU

#BASE ON IMAGE
imws()
{
	hsetroot -fill $HOME/images/wallpapers/_DSF6699b_3000px_1500.jpg -blur 0
}

#BASE ON COLORSCHEME
csws()
{
	convert -size 100x100 \
	xc:"#57607A" \
   	xc:"#ED7278" \
	xc:"#A19EC7" \
	xc:"#FFD7AF" \
	xc:"#F75D64" \
	xc:"#9C6D9C" \
	xc:"#FF806F" \
	xc:"#FDCBAC" \
	+append -filter Cubic \
	-spread 80 \
	-distort SRT 60 \
	/tmp/csws.png

	hsetroot -fill /tmp/csws.png -blur 100
}

csws
#imws
